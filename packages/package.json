{
  "name": "@thumbmarkjs/integrations",
  "version": "1.0.0",
  "private": true,
  "description": "Framework integrations for ThumbmarkJS",
  "workspaces": [
    "react",
    "vue"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces", 
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces",
    "dev:setup": "./scripts/dev-setup.sh",
    "dev:link": "./scripts/link-packages.sh",
    "dev:start": "./scripts/start-examples.sh",
    "dev:react": "cd examples/react-app && npm start",
    "dev:vue": "cd examples/vue-app && npm run dev",
    "example:install": "cd examples/react-app && npm install && cd ../vue-app && npm install"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thumbmarkjs/integrations.git"
  },
  "author": "ThumbmarkJS",
  "license": "MIT"
}